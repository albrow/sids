<div class="modal hide fade" id="signups">
    <div class="modal-header" tabindex="-1" role="dialog" aria-hidden="true">
        <button type="button" class="close" aria-hidden="true" data-dismiss="modal">&times;</button>
        <h3 class="cursive">Get Started</h3>
    </div>
    <div class="modal-body">
        <article class="center">
            <%= link_to "  Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'btn icon-facebook' %>
        </article>
        <article class="center">
            <%= link_to "  Sign in with Email", new_user_registration_path, :class => 'btn icon-signin' %>
        </article>  
    </div>
    <div class="modal-footer">
    </div>
</div>