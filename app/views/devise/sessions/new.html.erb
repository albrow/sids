	<section class="dark">
		<div class="container">
			<div class="row">
				<div class="span12 center">
					<h2 class="cursive"> Sign In</h2>
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<% if @user.errors.any? %>
					<div class="devise-errors"><%= devise_error_messages! %></div>
					<% end %>

					<div><%= f.email_field :email, :placeholder => "Email" %></div><br/>

					<div><%= f.password_field :password, :placeholder => 'Password' %></div><br/>

					<% if devise_mapping.rememberable? -%>
					<div id="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br/>
					<% end -%>

					<div><%= f.submit "Sign In", :class => "button button-primary cursive"%></div>
					<% end %>

					<div><%= render "devise/shared/links" %></div>
					<br/><br/>
				</div>
			</div>
		</div>
	</section>