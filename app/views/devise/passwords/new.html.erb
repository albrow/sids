<div id="load">
	<section class="dark" id="story">
		<div class="container">
			<div class="row">
				<div class="span12 center">
					<h2 class="cursive">Forgot your password?</h2>
					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
					<% if @user.errors.any? %>
					<div class="devise-errors"><%= devise_error_messages! %></div>
					<% end %>

					<div><%= f.email_field :email, :placeholder => "Email" %></div><br/>

					<div><%= f.submit "Send me reset password instructions" %></div>
					<% end %>

					<div><%= render "devise/shared/links" %></div>
					<br/><br/>
				</div>
			</div>
		</div>
	</section>
</div>