<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Brackets4Life</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Questrial|Lato:300,400,700,900,300italic,400italic,700italic,900italic|Trocchi' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>

  <%= render "shared/google_analytics" %>
</head>

<body>
  <div id="fb-root"></div>

  <%= render "shared/navbar" %>

  <!-- alerts used for devise, etc. -->
  <% if(notice) %>
  <p class="notice"><%= notice %></p>
  <% end %>

  <% if(alert) %>
  <p class="alert"><%= alert %></p>
  <% end %>

  <%= yield %>

  <%= render "shared/footer" %>

  <%= javascript_include_tag "application" %>
  <script src="https://checkout.stripe.com/v2/checkout.js"></script>

</body>
</html>
